<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.text.Text?>

<GridPane xmlns="http://javafx.com/javafx"
          xmlns:fx="http://javafx.com/fxml" alignment="center" hgap="10" vgap="10"
          fx:controller="com.example.humansvsgoblinsgui.EndScreenController">
<padding><Insets top ="25" right="25" bottom="10" left="25"/></padding>

    <Text text="YOU WIN!"
        GridPane.columnIndex="0" GridPane.rowIndex="0"
        GridPane.columnSpan="2"/>
    <Text text="Congratulations! You survived the dungeon. You return to the surface with heaps of treasure but also with knowledge no mortal man ought know."
        GridPane.columnIndex="0" GridPane.rowIndex="1"
        GridPane.columnSpan="2"/>
    <Text text="Would you like to play again?"
        GridPane.columnIndex="0" GridPane.rowIndex="2"
        GridPane.columnSpan="2" />
    <Button fx:id="button" text="Play again." onAction="#playAgain"
        GridPane.columnIndex="0" GridPane.rowIndex="3"
        GridPane.columnSpan="2"/>

</GridPane>
